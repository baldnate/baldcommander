{
  "name": "baldcommander",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps"
  },
  "keywords": [
    "obs",
    "serial",
    "streaming",
    "automation",
    "electron"
  ],
  "author": "baldnate",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/baldnate/baldcommander.git"
  },
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^20.44.4",
    "electron-rebuild": "^1.8.8"
  },
  "dependencies": {
    "obs-websocket-js": "^3.1.0",
    "serialport": "^8.0.5"
  },
  "build": {
    "appId": "com.electron.baldcommander",
    "win": {
      "target": "NSIS"
    }
  }
}
