{
  "name": "baldcommander",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps"
  },
  "keywords": [
    "obs",
    "serial",
    "streaming",
    "automation",
    "electron"
  ],
  "author": "baldnate",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^3.0.4",
    "electron-builder": "^20.39.0",
    "electron-rebuild": "^1.8.4"
  },
  "dependencies": {
    "obs-websocket-js": "^1.2.0",
    "serialport": "^7.0.2"
  },
  "build": {
    "appId": "com.electron.baldcommander",
    "win": {
      "target": "NSIS"
    }
  }
}
